<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:id="@+id/btn_ajuda50"
            android:background="@drawable/my_selector_cinquenta_cinquenta"
        />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_ajudaPublic"
            android:layout_weight="0.3"
            android:background="@drawable/my_selector_publico"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:id="@+id/btn_ajudaTlf"
            android:background="@drawable/my_selector_telefone"/>
    </LinearLayout>
    <!---->


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_weight="0.7"
        android:id="@+id/tv_pergunta" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_respostaA"
        android:gravity="center"
        android:layout_weight="0.1"                />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_respostaB"
        android:gravity="center"
        android:layout_weight="0.1"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_respostaC"
        android:gravity="center"
        android:layout_weight="0.1"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_respostaD"
        android:gravity="center"
        android:layout_weight="0.1"
        />


</LinearLayout>
